spring.application.name=h2database

#	In-memory based H2 Database
spring.datasource.url=jdbc:h2:mem:testdb       // H2 database URL

spring.datasource.driverClassName=org.h2.Driver

#spring.datasource.username=sa                 //  by dafault in H2 Database the username = 'sa' and Password is empty
#spring.datasource.password=

spring.datasource.username=tiger               //  Customize username and password
spring.datasource.password=root

spring.jpa.database-platform=org.hibernate.dialect.H2Dialect         

spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true

# Additional Configuration For H2 Database
nm gv

# To enable h2 database
spring.h2.console.enabled=true         // important  to unable H2 Database

# To Access h2 database on browser
spring.h2.console.path=/h2-console           // entry path for H2 database    eg. https://loalhost:8080/h2-console
